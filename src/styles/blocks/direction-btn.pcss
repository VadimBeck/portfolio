.direction-btn {
  width: 50px;
  height: 50px;
  background-color: $button-color;
  transition: .2s;
  
  &:hover, &:active {
    background-color: $violet;
  }

  &--next {
    transform: rotate(-90deg);
  }
  &--prev {
    transform: rotate(90deg);
  }
}

.direction-btn__arrow {
  height: 10px;
  fill: $grey;
  &--is-active {
    fill: #fff;
  }
}
