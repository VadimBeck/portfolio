.review {
  display: flex;
}

.review__content {
  display: flex;
  flex-direction: column;
}

.review__img-bg {
  width: 70px;
  height: 70px;
  opacity: 0.05;
  background-repeat: no-repeat;
  background-image: svg-load('quote.svg', fill=$text-color, width=100%, height=100%);
  margin-right: 30px;
  flex-shrink: 0;
}

.review__text {
  margin-bottom: 30px;
  font-weight: 700;
  opacity: 0.5;
  line-height: 1.7;
}

.review__person {
  align-items: center;
  margin-top: auto;
}