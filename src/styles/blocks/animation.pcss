.fade-enter-active {
  animation: show;
  animation-duration: 0.6s;
  animation-timing-function: ease;
}

.fade-leave-active {
  animation: hide;
  animation-duration: 0.8s;
  animation-timing-function: ease-in;
}

@keyframes show {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes hide {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}