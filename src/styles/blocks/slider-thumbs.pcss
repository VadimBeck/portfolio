.slider-thumbs {
  width: 100%;
  height: 100%;  
  position: relative;
}

.slider-thumbs__item {
  height: 25%;
  position: relative;
  &--is-active {
    z-index: 1;
    outline: 3px solid #dc9322;
  }
}

.slider-thumbs__link {
  display: inline-block;
  height: 100%;
}

.slider-thumbs__pic {
  height: 100%;
  width: auto;
}