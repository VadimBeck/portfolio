.person__avatar {
  width: 80px;
  height: 80px;
  margin-right: 25px;
  flex-shrink: 0;

  @include phones {
    width: 50px;
    height: 50px;
    margin-right: 15px;
  }
}

.person__name {
  margin-bottom: 15px;
  font-weight: 700;
  font-size: 18px;

  @include phones {
    margin-bottom: 5px;
  }
}

.person__post {
  font-weight: 600;
  opacity: 0.3;
}