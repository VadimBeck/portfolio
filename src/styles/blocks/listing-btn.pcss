.listing-btn {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid $text-color;
  color: $text-color;
  background: transparent;
  outline: none;
  cursor: pointer;
  transition: .2s;

  &:hover, &:active {
    color: $blue-violet;
    border-color: $blue-violet;
  }

  &--prev .listing-btn__pic {
    transform: rotate(180deg);
  }
  &:disabled {
    opacity: 0.5;
  }
}

.listing-btn__pic {
  width: 10px;
  height: 10px;
  fill: currentColor;
}